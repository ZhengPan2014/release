<?xml version="1.0"?>
<launch>
    <include file="$(find bringup)/launch/bringup-dbparam.launch"/>

    <include file="$(find bringup)/launch/amcl.launch">
       <arg name="scan_topic" value="/scan_rectified" />
       <arg name="initial_pose_x" value="0.0"/>
       <arg name="initial_pose_y" value="0.0"/>
       <arg name="initial_pose_a" value="0.0"/>
    </include>
    
    <node name="robot_pose_publisher" pkg="robot_pose_publisher" type="robot_pose_publisher" output="screen"/>

    <node name="move_base" pkg="move_base" type="move_base" respawn="false" output="screen">
        
        <rosparam>
            base_global_planner: "navfn/NavfnROS"
            base_local_planner: "dwa_local_planner/DWAPlannerROS"
            recovery_behaviors:
              - name: 'conservative_reset'
                type: 'clear_costmap_recovery/ClearCostmapRecovery'
              - name: 'aggressive_reset'
                type: 'clear_costmap_recovery/ClearCostmapRecovery'
            conservative_reset:
                reset_distance: 3.0
                layer_names: [obstacle_layer, infrared_layer, side_layer]
            aggressive_reset:
                reset_distance: 0.0
                layer_names: [obstacle_layer, infrared_layer, side_layer]
            controller_frequency: 10.0 
            planner_patience: 10.0 
            controller_patience: 15.0
            conservative_reset_dist: 3.0 #0.25
            recovery_behavior_enabled: true
            clearing_rotation_allowed: false
            oscillation_timeout: 10.0
            planner_frequency: 1.0 #0.0
            global_costmap:
                global_frame: map
                robot_base_frame: base_footprint
                transform_tolerance: 0.5
                update_frequency: 2.0 #2.0
                publish_frequency: 0.5 #0.0
                static_map: true
                footprint: [[0.355, -0.268], [0.355, 0.268], [-0.33, 0.268], [-0.33, -0.268]]
                resolution: 0.05
                plugins:
                  - name: static_layer
                    type: "costmap_2d::StaticLayer"
                  - name: infrared_layer
                    type: "range_sensor_layer::RangeSensorLayer"
                  - name: side_layer
                    type: "range_sensor_layer::RangeSensorLayer"
                  - name: obstacle_layer
                    type: "costmap_2d::ObstacleLayer"
                  - name: inflation_layer
                    type: "costmap_2d::InflationLayer"
                static_layer:
                    map_topic: /map_edit
                    unknown_cost_value: -1
                obstacle_layer:
                    observation_sources: scan_rectified 
                    scan_rectified:
                        topic: /scan_rectified                       
                        data_type: LaserScan
                        clearing: true
                        marking: true
                        max_obstacle_height: 1.0
                        min_obstacle_height: -1.0
                        inf_is_valid: true
       
                    track_unknown_space: true
                    z_voxels: 6
                infrared_layer:
                    ns: ""
                    topics: ['/infrared_03', '/infrared_04', '/infrared_05', '/infrared_06', '/infrared_07']
                    clear_threshold: 0.2
                    mark_threshold: 0.9
                    clear_on_max_reading: true
                side_layer:
                    topics: ['/infrared_01', '/infrared_02', '/infrared_08', 'infrared_09']
                    clear_threshold: 0.2
                    mark_threshold: 0.9
                    clear_on_max_reading: true

                inflation_layer:
                    inflation_radius: 0.75
                    cost_scaling_factor: 5.0
            local_costmap:
                global_frame: odom
                robot_base_frame: base_footprint
                transform_tolerance: 0.5
                update_frequency: 2.0 #5.0
                publish_frequency: 2.0 #0.5
                footprint: [[0.355, -0.268], [0.355, 0.268], [-0.33, 0.268], [-0.33, -0.268]]
                static_map: false
                rolling_window: true
                width: 6.0
                height: 6.0
                resolution: 0.05
                plugins:
                  - name: obstacle_layer
                    type: "costmap_2d::ObstacleLayer"  
<!--                   - name: infrared_layer
                    type: "range_sensor_layer::RangeSensorLayer"
                  - name: side_layer
                    type: "range_sensor_layer::RangeSensorLayer"  -->          
                  - name: inflation_layer
                    type: "costmap_2d::InflationLayer"
                obstacle_layer:
                    observation_sources: scan_rectified 
                    scan_rectified:
                        topic: /scan_rectified                        
                        data_type: LaserScan
                        clearing: true
                        marking: true
                        max_obstacle_height: 1.0
                        min_obstacle_height: -1.0
                        inf_is_valid: true
                     
                    mark_threshold: 0.0                 
                    track_unknown_space: true
                    z_voxels: 6
                 
<!--                 infrared_layer:
                    ns: ""
                    topics: ['/infrared_03', '/infrared_04', '/infrared_05', '/infrared_06', '/infrared_07']
                    clear_threshold: 0.2
                    mark_threshold: 0.8
                    clear_on_max_reading: true
                side_layer:
                    topics: ['/infrared_01', '/infrared_02', '/infrared_08', 'infrared_09']
                    clear_threshold: 0.2
                    mark_threshold: 0.8
                    clear_on_max_reading: true  -->

                inflation_layer:
                    inflation_radius: 0.75
                    cost_scaling_factor: 5.0 
            NavfnROS:
                allow_unknown: false
            TrajectoryPlannerROS:
                max_vel_x: 0.5
                min_vel_x: 0.1
                max_vel_theta: 1.0
                min_vel_theta: -1.0
                min_in_place_vel_theta: 0.3 
                acc_lim_x: 0.5 
                acc_lim_y: 0.0 
                acc_lim_theta: 3.2
                holonomic_robot: false
                yaw_goal_tolerance: 0.05 
                xy_goal_tolerance: 0.05 
                latch_xy_goal_tolerance: true
                meter_scoring: true
                occdist_scale: 0.5 
                heading_scoring: true
                heading_scoring_timestep: 1.0 #0.8
                dwa: true
                #global_frame_id: odom
                oscillation_reset_dist: 0.05
            DWAPlannerROS:
                acc_lim_x: 0.5 
                acc_lim_y: 0.0
                acc_lim_th: 3.2
                max_trans_vel: 0.5 
                min_trans_vel: 0.1
                max_vel_x: 0.5
                min_vel_x: 0.0
                max_vel_y: 0.0
                min_vel_y: 0.0
                max_rot_vel: 1.0
                min_rot_vel: 0.3 
                yaw_goal_tolerance: 0.05
                xy_goal_tolerance: 0.05
                latch_xy_goal_tolerance: true 
                sim_time: 1.7
                sim_granularity: 0.025
                vx_samples: 6
                vy_samples: 1
                vtheta_samples: 20
                penalize_negative_x: false 
                path_distance_bias: 32.0 
                goal_distance_bias: 24.0
                occdist_scale: 0.5
                oscillation_reset_dist: 0.05
        </rosparam>
    </node>
</launch>
